root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[Makefile]
indent_style = tab
tab_width = 4

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2
tab_width = 2

[*.yml]
indent_style = space
indent_size = 2
tab_width = 2

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
tab_width = 2

[*.sh]
indent_style = space
indent_size = 4
tab_width = 4

[*.py]
indent_style = space
indent_size = 4
tab_width = 4

[*.json]
indent_style = space
indent_size = 4
tab_width = 4
